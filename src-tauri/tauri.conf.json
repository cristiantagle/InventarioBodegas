{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Inventario de Bodega",
  "version": "0.1.0",
  "identifier": "com.inventario.bodega",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Inventario de Bodega",
        "width": 430,
        "height": 920,
        "minWidth": 360,
        "minHeight": 720,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
